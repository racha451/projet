<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".presentation.main.SignupActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="50dp"
        tools:context=".presentation.main.MainActivity">

        <ImageView
            android:id="@+id/ee"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ee" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Description de l'api: l'application permet d'acceder aux element de l'api Rest
            qui comportent les informations des entreprises productrice de films. L'api permet l'accées aux element uniquement par ID "
            android:textStyle="bold"
            android:textSize="18sp"/>






        <Button
            android:id="@+id/btnre"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="5dp"
            android:text="Passer à l'api rest" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
