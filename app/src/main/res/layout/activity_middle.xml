<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".presentation.main.SignupActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="50dp"
        tools:context=".presentation.main.MainActivity">



        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:text="Description: l'application permet d'accéder aux éléments de l'api Rest
qui comporte des entreprises productrices de films et des informations les concernant.
L'api Rest utilisée ne permet d’accéder à ses éléments que à partir de leur ID, le script Json des entreprises comporte des informations concernant une entreprise unique, mais l’accès à la liste peut se faire par élément"
            android:textStyle="bold"
            android:textSize="15sp"/>






        <Button
            android:id="@+id/btnre"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:layout_marginTop="50dp"
            android:text="Passer à l'api rest" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
